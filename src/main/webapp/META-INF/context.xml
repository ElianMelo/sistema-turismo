<?xml version="1.0" encoding="UTF-8" ?>
<Context reloadable="true">

	<!-- Configura o JDBC -->
	<Resource name="jdbc/datasource"
	auth="Container"
	type="javax.sql.DataSource"
	maxActive="100"
	maxIdle="30"
	maxWait="10000"
	username="root"
	password=""
	driverClassName="com.mysql.jdbc.Driver"
	url="jdbc:mysql://localhost:3306/turismo?autoReconnect=true"/>
</Context>

